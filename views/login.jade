extends layout

block navbar

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title
					div
						img(src='images/r0b.svg')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='användarnamn',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='lösenord', required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Logga in
							span.clearfix
					#message
						if message != ""
							div.alert.alert-danger(role='alert')
								strong Fel!
								|#{message}
